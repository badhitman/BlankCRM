@using BlazorLib.Components.Constructor

@page "/questionnaire/session/{DocumentGuid:guid}"

@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inherits BlazorBusyComponentBaseModel

<span>Опрос/анкета</span>

@if (IsBusyProgress || SessionDocument.Id < 1)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <CascadingValue Value="SessionDocument">
        <CascadingValue Value="true">
            <DocumentClientViewComponent />
        </CascadingValue>
    </CascadingValue>
}