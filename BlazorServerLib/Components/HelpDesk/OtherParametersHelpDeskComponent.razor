@using BlazorWebLib.Components.ParametersShared
@using BlazorWebLib.Components.Commerce
@using BlazorLib.Components
@using BlazorLib
@using MudBlazor
@using SharedLib

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-2">
    <MudTabPanel Text="Home">
        <StringParameterStorageComponent Label="Заголовок" HelperText="Текст в левом верхнем углу" KeyStorage="GlobalStaticCloudStorageMetadata.TitleMain" />
        <hr />
        <TinyMCEComponent Label="Home PUBLIC" HelperText="Публичная страница для НЕ авторизованных пользователей" KeyStorage="GlobalStaticCloudStorageMetadata.HomePagePublic" />
        <hr />
        <TinyMCEComponent Label="Home PRIVATE" HelperText="Страница для авторизованных пользователей" KeyStorage="GlobalStaticCloudStorageMetadata.HomePagePrivate" />
    </MudTabPanel>
    <MudTabPanel Text="Другое">
        <ul class="list-group list-group-flush">
            <li class="list-group-item my-2">
                <div class="row row-cols-1 row-cols-md-2 g-1">
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <RubricParameterStorageComponent Label="Рубрика для заказа" HelperText="Автоматическое назначение рубрики при создании заказа" KeyStorage="GlobalStaticCloudStorageMetadata.RubricIssueForCreateOrder" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <RubricParameterStorageComponent Label="Рубрика для брони" HelperText="Автоматическое назначение рубрики при записи на услугу/бронь" KeyStorage="GlobalStaticCloudStorageMetadata.RubricIssueForCreateAttendanceOrder" />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <div class="card-body">
                                <BoolSimpleStorageComponent StorageMetadata="GlobalStaticCloudStorageMetadata.GlobalEnable2FA" Title="Глобальная двухфакторная аутентификация" Label="2FA" HintTrue="Всем принудительно включён 2fa" HintFalse="2fa у каждого пользователя персонально" />
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            <li class="list-group-item my-2">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-body-secondary">WAPPI (WhatsApp)</h6>
                        <BoolSimpleStorageComponent StorageMetadata="GlobalStaticCloudStorageMetadata.ParameterEnabledWappi" Title="Активация Wappi" Label="Активация службы отправки сообщений Wappi" HintTrue="Wappi включён - сообщения отправляются" HintFalse="Выключено: сообщения не будут отправляться через Wappi" />
                        <hr />
                        <div class="vstack gap-3">
                            <div class="row row-cols-1 row-cols-md-2 g-1">
                                <div class="col">
                                    <div class="card">
                                        <div class="card-body">
                                            <StringParameterStorageComponent IsPassword="true" Label="Токен API" HelperText="https://wappi.pro/dashboard" KeyStorage="GlobalStaticCloudStorageMetadata.WappiTokenApi" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card">
                                        <div class="card-body">
                                            <StringParameterStorageComponent Label="ID профиля" HelperText="https://wappi.pro/dashboard" KeyStorage="GlobalStaticCloudStorageMetadata.WappiProfileId" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-text">
                            <a href="https://wappi.pro/">wappi.pro</a> настройки
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </MudTabPanel>
</MudTabs>