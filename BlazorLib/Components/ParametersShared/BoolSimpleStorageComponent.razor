@using MudBlazor
@inherits BlazorBusyComponentBaseModel

<h6 class="card-subtitle mb-2 text-body-secondary">
    @Title
    @if (IsBusyProgress)
    {
        <sup class="spinner-grow spinner-grow-sm text-primary ms-2">
            <span class="visually-hidden">Loading...</span>
        </sup>
    }
</h6>
<div class="stack gap-3">
    <MudSwitch Disabled="IsBusyProgress" @bind-Value="StoreValue" ThumbIcon="@(StoreValue == true ? Icons.Material.Filled.Done : Icons.Material.Filled.Close)" ThumbIconColor="@(StoreValue == true ? Color.Success : Color.Error)">
        @Label
    </MudSwitch>
    @if (StoreValue && !string.IsNullOrWhiteSpace(HintTrue))
    {
        <span class="text-success">
            @HintTrue
        </span>
    }
    else if (!StoreValue && !string.IsNullOrWhiteSpace(HintFalse))
    {
        <span class="text-info-emphasis">
            @HintFalse
        </span>
    }
</div>