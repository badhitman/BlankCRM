@inherits BlazorBusyComponentBaseModel

<h6 class="card-subtitle mb-2 text-body-secondary">@Label</h6>
<div class="vstack gap-3">
    <RubricInputComponent ModeSelectingRubrics="ModesSelectRubricsEnum.AllowWithoutRubric"
                          SelectRubricsHandle="RubricSelectAction"
                          RubricInitial="@(_rubricSelected ?? 0)"
                          ShowDisabledRubrics />
</div>

@if (!string.IsNullOrWhiteSpace(HelperText))
{
    <div class="form-text">
        @HelperText
    </div>
}