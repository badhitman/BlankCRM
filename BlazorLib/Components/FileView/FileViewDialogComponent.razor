@inherits BlazorBusyComponentBaseModel

@using MudBlazor

<MudDialog>
    <DialogContent>
        <code>@DirectoryItem.FullPath</code>
        <select class="form-select" id="exampleInputStatusPayment" @bind="SelectedEncoding">
            @foreach (EncodingsEnum _sp in Enum.GetValues(typeof(EncodingsEnum)))
            {
                <option value="@_sp">@_sp.DescriptionInfo()</option>
            }
        </select>
        <MudSlider T=uint Max="10240" @bind-Value="ReadSizeArea">
            Размер данных: @GlobalToolsStandard.SizeDataAsString(ReadSizeArea) (x2 = @GlobalToolsStandard.SizeDataAsString(ReadSizeArea * 2))
        </MudSlider>
        <MudSlider Max="DirectoryItem.FileSizeBytes" @bind-Value="FilePositionSlider">
            Position: @_valueSliderString (of @FileSizeString)
        </MudSlider>
        <MudTextField Variant="Variant.Outlined"
                      @bind-Text="RawDataStart"
                      Label="Start RawData"
                      T="string"
                      Lines="17"
                      ReadOnly />
        <MudTextField Variant="Variant.Outlined"
                      @bind-Text="RawDataEnd"
                      Label="End RawData"
                      T="string"
                      Lines="17"
                      ReadOnly />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>