@using static SharedLib.GlobalStaticConstantsRoutes
@using BlazorLib.Components.ParametersShared
@using MudBlazor

@inherits BlazorBusyComponentBaseModel

@if (IsBusyProgress)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate Class="my-7" />
}
<div class="card">
    <div class="card-body">
        <MudTabs Elevation="2" Rounded ApplyEffectsToContainer PanelClass="pa-2">
            <MudTabPanel Text="Склады">
                <MudPaper Class="ma-2" Elevation="3">
                    <RubricsManageComponent TEntity="RubricNodeBodyComponent"
                                            SingleLevelMode
                                            ContextName="@Routes.WAREHOUSE_CONTROLLER_NAME" />
                </MudPaper>
            </MudTabPanel>
            <MudTabPanel Text="Оплата">
                <MudCard>
                    <MudCardContent>
                        <MudText>Типы платежей</MudText>
                        <RubricsManageComponent TEntity="RubricNodeBodyComponent"
                                                SingleLevelMode
                                                ContextName="@Path.Combine(Routes.PAYMENTS_CONTROLLER_NAME, Routes.TYPES_CONTROLLER_NAME)" />
                    </MudCardContent>
                </MudCard>
            </MudTabPanel>
            <MudTabPanel Text="Доставка">
                <MudCard>
                    <MudCardContent>
                        <MudText>Методы доставки</MudText>
                        <RubricsManageComponent TEntity="RubricNodeBodyComponent"
                                                SingleLevelMode
                                                ContextName="@Path.Combine(Routes.DELIVERIES_CONTROLLER_NAME, Routes.TYPES_CONTROLLER_NAME)" />
                    </MudCardContent>
                </MudCard>
            </MudTabPanel>
            <MudTabPanel Text="Офисы">
                <RubricsManageComponent TEntity="RubricNodeBodyComponent"
                                        SingleLevelMode
                                        ContextName="@Routes.OFFICES_CONTROLLER_NAME" />
            </MudTabPanel>
            <MudTabPanel Text="Issues/Обращения">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Режим выбора рубрик/категорий обращений
                        <MudRadioGroup @bind-Value="SelectedOption">
                            @foreach (ModesSelectRubricsEnum mode in Enum.GetValues(typeof(ModesSelectRubricsEnum)).Cast<ModesSelectRubricsEnum>())
                            {
                                <MudRadio Value="@mode">@mode.DescriptionInfo()</MudRadio>
                            }
                        </MudRadioGroup>
                        @switch (SelectedOption)
                        {
                            case ModesSelectRubricsEnum.Strict:
                                <div class="form-text">Строгий режим: требуется выбор всех подрубрик (если они существуют) до конца.</div>
                                break;
                            case ModesSelectRubricsEnum.SelectAny:
                                <div class="form-text">Разрешён выбор любой рубрики, но выбрать нужно обязательно.</div>
                                break;
                            case ModesSelectRubricsEnum.AllowWithoutRubric:
                                <div class="form-text">В этом режиме выбор рубрики не обязателен.</div>
                                break;
                        }
                    </li>
                    <li class="list-group-item">
                        <BoolSimpleStorageComponent StorageMetadata="GlobalStaticCloudStorageMetadata.ParameterShowDisabledRubrics"
                                                    Title="Отображение деактивированных рубрик клиенту"
                                                    Label="При создании обращения в процессе выбора рубрики неактивные категории/темы/рубрики можно скрыть, а можно отобразить без возможности их выбирать."
                                                    HintTrue="Элементы будут отображаться, но не доступны (disable) для выбора"
                                                    HintFalse="Элементы будут скрыты" />
                    </li>
                </ul>
                <hr />
                <MudPaper Class="ma-2" Elevation="3">
                    <RubricsManageComponent TEntity="RubricNodeBodyComponent" />
                </MudPaper>
            </MudTabPanel>
            <MudTabPanel ToolTip="Категории статей"
                         Text="CMS"
                         Icon="@Icons.Material.Filled.Folder">
                <MudPaper Class="ma-2" Elevation="3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Категории</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">Категории статей</h6>
                            <RubricsManageComponent TEntity="RubricNodeBodyComponent"
                                                    ContextName="@Routes.ARTICLES_CONTROLLER_NAME" />
                        </div>
                    </div>
                </MudPaper>
            </MudTabPanel>
            <MudTabPanel Text="Номенклатура"
                         Icon="@Icons.Material.Filled.ShoppingCart"
                         ToolTip="Группы/категории для структурирования номенклатуры">
                <MudPaper Class="ma-2" Elevation="3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Категории номенклатуры</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">Группы/категории для структурирования номенклатуры</h6>
                            <GoodsGroupsRubricsManageComponent />
                        </div>
                    </div>
                </MudPaper>
            </MudTabPanel>
        </MudTabs>
    </div>
</div>