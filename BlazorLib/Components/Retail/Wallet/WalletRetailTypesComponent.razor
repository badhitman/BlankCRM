@using MudBlazor
@inherits BlazorBusyComponentBaseAuthModel

<h3>Типы кошельков</h3>

@if (IsBusyProgress)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate Class="my-3" />
}
else if (WalletsTypesList is null)
{
    <figure class="text-center">
        <blockquote class="blockquote">
            <p>Ошибка выполнения запроса.</p>
        </blockquote>
        <figcaption class="blockquote-footer">
            Response is null
        </figcaption>
    </figure>
}
else
{
    <div class="list-group">
        @foreach (WalletRetailTypeViewModel wt in WalletsTypesList)
        {
            <WalletRetailTypeElementComponent WalletTypeElement="wt" />
        }
    </div>
    <hr />
    <MudExpansionPanels MultiExpansion>
        <MudExpansionPanel Text="Новый тип кошелька">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Создать новый тип кошелька</h5>
                    <div class="mb-3">
                        <label for="exampleFormControlInputName" class="form-label">Название</label>
                        <input @bind-value="creatingNewWallet.Name"
                               @bind-value:event="oninput"
                               type="text"
                               class="form-control"
                               id="exampleFormControlInputName"
                               placeholder="Name">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextareaDescription" class="form-label">Описание</label>
                        <textarea @bind-value="creatingNewWallet.Description"
                                  @bind-value:event="oninput"
                                  class="form-control"
                                  id="exampleFormControlTextareaDescription"
                                  rows="3"></textarea>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button class="btn btn-outline-primary" type="button" @onclick="CreateNew" disabled="@CannotCreateNew">Create</button>
                    </div>
                </div>
            </div>
        </MudExpansionPanel>
    </MudExpansionPanels>
}