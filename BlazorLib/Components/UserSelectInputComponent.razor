@inherits LazySelectorComponent<UserInfoModel>

<div style="max-width: 450px;">
    <div id="@toggleBtnId" class="input-group mb-3">
        <button @onclick="EditToggle" title="Установить" class="btn btn-outline-secondary bi bi-pencil" type="button"></button>
        <input disabled="@(IsBusyProgress)" title="@(IsEditing ? "Введите текст запроса для поиска пользователя" : "")" @bind-value="SelectedValueText" @bind-value:event="oninput" readonly="@(!IsEditing)" type="text" class="form-control" placeholder="@(IsEditing ? "Поиск пользователя" : "")" aria-label="Text input with dropdown button">
        <ul class="chat-selector-input dropdown-menu @ShowIfEditing" id="@dropdownId" style="@StyleIfEditing" data-meta="@HeightDropdown">
            <i title="Отмена (закрыть меню выбора)" @onclick="EditToggle" class="bi bi-x-lg position-absolute top-0 end-0" style="cursor:pointer;"></i>
            @foreach (UserInfoModel uinf in LoadedData)
            {
                <li @onclick="() => SelectElementEvent(uinf)"><span class="dropdown-item">@uinf.ToString()</span></li>
            }
            @if (LoadedData.Count < TotalRowsCount)
            {
                <li><hr class="dropdown-divider"></li>
                <li @onclick="LoadPartData"><span class="dropdown-item">Загрузить ещё</span></li>
            }
        </ul>
    </div>
</div>