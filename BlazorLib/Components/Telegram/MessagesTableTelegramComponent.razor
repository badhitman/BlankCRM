@using MudBlazor
@inherits BlazorBusyComponentBaseModel

<MudTable @ref=tableRef ServerData="ServerReload" Dense Hover>
    <ToolBarContent>
        <MudText Typo="Typo.h6">
            Messages
            <sup @onclick=ReloadTableData title="click for reload/update" class="bi bi-arrow-clockwise text-primary-emphasis" style="cursor:pointer;"></sup>
        </MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>DateTime</MudTh>
        <MudTh>Text/Caption</MudTh>
        <MudTh>From</MudTh>
        <MudTh>Type</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="DateTime">@context.CreatedAtUtc.GetHumanDateTime()</MudTd>
        <MudTd DataLabel="Text">
            @if (string.IsNullOrWhiteSpace(context.Caption))
            {
                <span>@context.Text</span>
            }
            else
            {
                <span>@context.Text <sup class="ms-1">@context.Caption</sup></span>
            }
        </MudTd>
        <MudTd DataLabel="From"><span class="badge text-bg-@(context.From?.Id == ChatId ? "light" : "primary")">@context.From!.GetName()</span></MudTd>
        <MudTd DataLabel="Type">@context.TypeMessage.DescriptionInfo()</MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>Соответствующих записей не найдено</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>