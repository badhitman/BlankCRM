@using MudBlazor
@inherits BlazorBusyComponentBaseModel

<MudTable ServerData="ServerReload" Dense Hover @ref="table">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Breez</MudText>
        <MudSpacer />
        <MudTextField T="string"
                      ValueChanged="@(s => OnSearch(s))"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium"
                      Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>NAME</MudTh>
        <MudTh>Params</MudTh>
        <MudTh>Store</MudTh>
        <MudTh>Price`s</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="NAME">@context.NAME</MudTd>
        <MudTd DataLabel="Params"><ProductRowParamsComponent Params="context.Params" /></MudTd>
        <MudTd DataLabel="Store"><ProductRowStoreAvailabilityComponent StoreAvailability="context.StoreAvailability" /></MudTd>
        <MudTd DataLabel="Price`s"><ProductRowPricesAvailabilityComponent Prices="@context.Prices" /></MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>Nothing found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Downloading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>