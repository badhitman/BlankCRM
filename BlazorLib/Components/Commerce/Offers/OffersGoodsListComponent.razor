@using BlazorLib.Components.ParametersShared
@using MudBlazor
@inherits BlazorRegistersComponent

<style>
    td.mud-table-cell sup.bi, i.bi {
        cursor: pointer;
        color: brown;
    }
</style>

<MudPaper Class="pa-4 mt-3 position-relative">
    <AuthorizeView Roles="@($"{GlobalStaticConstantsRoles.Roles.Admin}")">
        <Authorized>
            <span title="Настройка отображения" @onclick="CancelChangeConfig" style="cursor:pointer;" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bi bi-gear-fill">
                <span class="visually-hidden">view config</span>
            </span>
        </Authorized>
    </AuthorizeView>
    <MudStack Spacing="2" Class="pb-2">
        @if (CurrentUserSession?.IsAdmin == true)
        {
            <MudButton OnClick="OnExpandCollapseClick" Variant="Variant.Outlined">@(_expanded ? "Отмена" : "Создать")</MudButton>
            <MudCollapse Expanded="_expanded">
                <OfferCreatingFormComponent OfferCreatingHandler="CreateOfferAction" CurrentNomenclature="CurrentNomenclature" />
            </MudCollapse>
        }
    </MudStack>
    <MudTable ServerData="ServerReload" Dense Hover @ref="table">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Offers</MudText>
            <MudSpacer />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Название</MudTh>
            <MudTh>Номенклатура</MudTh>
            <MudTh>Цена@(_showWorth ? "" : "/Стоимость")</MudTh>
            @if (!_showMultiplicity)
            {
                <MudTh>Кратность</MudTh>
            }
            <MudTh>Ед. изм.</MudTh>
            <MudTh>Вес</MudTh>
            <MudTh>Остатки</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Название">
                <MudLink Href="@($"/nomenclature/offer-card/{context.Id}")" Class="@(context.IsDisabled ? "text-decoration-line-through opacity-50" : "")">
                    @context.Name
                </MudLink>
                <AuthorizeView Context="col" Roles="@($"{GlobalStaticConstantsRoles.Roles.Admin}")">
                    <Authorized>
                        <sup class="text-secondary-emphasis">@context.QuantitiesTemplate</sup>
                    </Authorized>
                </AuthorizeView>
            </MudTd>
            <MudTd DataLabel="Номенклатура">
                <span>@($"`{context.Nomenclature?.Name}` ({context.Nomenclature?.BaseUnit.DescriptionInfo()})")</span>
            </MudTd>
            <MudTd DataLabel="Цена">
                @($"{context.Price}{(_showWorth ? "" : $"/{Math.Round(context.Price / context.Multiplicity, 2)}")}")
                @if (CurrentUserSession?.IsAdmin == true)
                {
                    <PricesRulesForOfferComponent Offer="context" />
                }
            </MudTd>
            @if (!_showMultiplicity)
            {
                <MudTd DataLabel="Кратность">@context.Multiplicity</MudTd>
            }
            <MudTd DataLabel="Ед. изм.">@context.OfferUnit.DescriptionInfo()</MudTd>
            <MudTd DataLabel="Вес">@context.Weight</MudTd>
            <MudTd DataLabel="Остатки">
                @RegistersCache.Where(x => x.OfferId == context.Id).Sum(x => x.Quantity)
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>Данные отсутствуют</MudText>
        </NoRecordsContent>
        <LoadingContent>
            <MudText>Loading...</MudText>
        </LoadingContent>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudPaper>
<MudDialog @bind-Visible="VisibleChangeConfig" Options="_dialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Настройки отображения (товары)
        </MudText>
    </TitleContent>
    <DialogContent>
        <ul class="list-group list-group-flush">
            <li class="list-group-item my-2">
                <BoolSimpleStorageComponent StorageMetadata="GlobalStaticCloudStorageMetadata.HideMultiplicityOffers"
                                            Title="Колонка кратности"
                                            Label="Кратность: отображение колонки (товар)"
                                            HintTrue="Колонка кратности отображается"
                                            HintFalse="Колонка кратности скрыта" />
            </li>
            <li class="list-group-item my-2">
                <BoolSimpleStorageComponent StorageMetadata="GlobalStaticCloudStorageMetadata.HideWorthOffers"
                                            Title="Стоимость"
                                            Label="Отображение информации"
                                            HintTrue="Стоимость скрыта"
                                            HintFalse="Стоимость отображается" />
            </li>
        </ul>
    </DialogContent>
</MudDialog>