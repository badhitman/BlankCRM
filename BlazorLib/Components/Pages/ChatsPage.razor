@page "/telegram-bot"
@using BlazorLib.Components.Telegram
@using MudBlazor

@rendermode @(new InteractiveServerRenderMode(prerender: false))
@attribute [Authorize(Roles = $"{GlobalStaticConstantsRoles.Roles.HelpDeskChatsManage},{GlobalStaticConstantsRoles.Roles.Admin}")]

<MudTabs Elevation="2" Rounded ApplyEffectsToContainer PanelClass="pa-2">
    <MudTabPanel Text="Чаты">
        <TelegramChatsTableComponent />
    </MudTabPanel>
    <MudTabPanel Text="Сообщения">
        <MessagesTelegramComponent ChatId="0" />
    </MudTabPanel>
    <MudTabPanel Text="Состояние">
        <ErrorMessageTelegramBotComponent />
        <p class="form-text">
            Ошибки отправки сообщений ботом регистрируются. Если клиент удалит/заблокирует бота, тогда его попытки отправить сообщение будут завершаться ошибкой.
        </p>
    </MudTabPanel>
</MudTabs>