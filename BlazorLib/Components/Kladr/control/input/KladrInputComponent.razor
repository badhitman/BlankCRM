@inherits BlazorBusyComponentBaseModel

<div class="vstack">
    <div class="input-group">
        <span class="input-group-text">Адрес (КЛАДР):</span>
        <input readonly type="text" placeholder="Выбор из классификатора" class="form-control" value="@KladrObject?.Name">
        @if (IsBusyProgress)
        {
            <button class="btn btn-outline-info" type="button" disabled>
                <span class="spinner-grow spinner-grow-sm" aria-hidden="true"></span>
                <span role="status">Loading...</span>
            </button>
        }
        <button @onclick="OpenDialogAsync" type="button" class="btn btn-outline-secondary" disabled="@(ReadOnly || IsBusyProgress)">Выбрать</button>
        <button @onclick="ClearInput" type="button" class="btn btn-outline-secondary bi bi-x-lg" disabled="@(IsBusyProgress || ReadOnly || string.IsNullOrWhiteSpace(KladrObject?.Id))"></button>

    </div>
    <div id="aboutHelp" class="form-text">
        @if (!string.IsNullOrWhiteSpace(CurrentKladrObject?.PostIndex))
        {
            <span class="me-2">Почтовый индекс: <a href="https://www.pochta.ru/offices/@CurrentKladrObject.PostIndex" target="_blank"> @CurrentKladrObject.PostIndex</a></span>
        }
        @if (!string.IsNullOrWhiteSpace(KladrObject?.Name))
        {
            <a href="https://yandex.ru/maps?text=@KladrObject.Name" target="_blank" class="me-2">Yandex.Map</a>
        }
    </div>
</div>
