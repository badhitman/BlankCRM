@using BlazorLib.Components.ToolsApp
@using BlazorLib.Components
@using BlazorLib
@using MudBlazor
@using SharedLib

@inherits BlazorBusyComponentBaseModel

@if (IsBusyProgress)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-3" />
}

<div class="card">
    <div class="card-header">
        <div class="input-group">
            <label class="input-group-text" for="inputGroupSelect01">Токены</label>
            <select @bind="SelectedConfId" class="form-select" aria-label="Default select example">
                @if (AllTokens.Length == 0)
                {
                    <option value="0" selected>Справочник подключений пуст</option>
                }
                else
                {
                    foreach (ApiRestConfigModelDB connect in AllTokens.OrderBy(x => x.Name))
                    {
                        <option value="@connect.Id">@connect.Name @connect.AddressBaseUri</option>
                    }
                }
            </select>
            @if (SelectedConfId != 0)
            {
                <button @onclick="() => SetActiveHandler(0)" class="btn btn-outline-secondary" type="button">Добавить новое подключение</button>
            }
            else if (AllTokens.Length != 0)
            {
                <button @onclick="() => SetActiveHandler(AllTokens.First().Id)" class="btn btn-outline-secondary" type="button">Отмена</button>
            }
        </div>
    </div>
    <div class="card-body">
        <ConnectionConfigComponent @ref="configRef" @key="ApiConnect.Id" ParentUpdate="StateHasChanged" SetActiveHandler="(int e) => InvokeAsync((async () => await SetActiveHandler(e)))" />
        @if (AllTokens.Length == 0)
        {
            <figure class="text-center">
                <blockquote class="blockquote">
                    <p>Доступные подключения отсутствуют.</p>
                </blockquote>
                <figcaption class="blockquote-footer">
                    Добавьте своё первое <cite title="токен доступа">подключение</cite>
                </figcaption>
            </figure>
        }
        else if (SelectedConfId == 0)
        {
            <figure class="text-center">
                <blockquote class="blockquote">
                    <p>Не выбрано подключение.</p>
                </blockquote>
                <figcaption class="blockquote-footer">
                    Выбор <cite title="для активации панели">токена</cite> подключения
                </figcaption>
            </figure>
        }
        else if (configRef?.GetMe?.Success() == true && configRef.GetMe.Response is not null)
        {
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="Статус">
                    <div class="card my-1">
                        <div class="card-body">
                            <h5 class="card-title">Карточка клиента</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">@configRef.GetMe.Response.UserName</h6>
                            @if (configRef.GetMe?.Response.Roles is not null)
                                @foreach (string _r in configRef.GetMe.Response.Roles)
                                {
                                    <span class="badge text-bg-primary mx-1">@_r</span>
                                }
                        </div>
                        @if (ApiConnect.Id > 0)
                        {
                            <div class="card-footer text-body-secondary">
                                <div class="d-grid gap-2">
                                    <button @onclick="DeleteConnectionConfig" type="button" class="btn btn-@(deleteInit ? "" : "outline-")danger">@(deleteInit ? "Подтвердить удаление" : "Удаление")</button>
                                    @if (deleteInit)
                                    {
                                        <button @onclick="() => deleteInit = false" class="btn btn-primary" type="button">Отмена удаления</button>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </MudTabPanel>
                <MudTabPanel Text="Логи">
                    <LogsComponent />
                </MudTabPanel>
                <MudTabPanel Text="Файлы/Папки">
                    <SyncDirectoriesRulesComponent />
                </MudTabPanel>
                <MudTabPanel Text="Команды">
                    <ExeCommandsComponent ParentPage="this" />
                </MudTabPanel>
                <MudTabPanel Disabled="!IsDebug" Text="КЛАДР 4.0">
                    <KladrManageComponent />
                </MudTabPanel>
            </MudTabs>
        }
        else if (ApiConnect.Id > 0)
        {
            <div class="card-footer text-body-secondary">
                <div class="d-grid gap-2">
                    <button @onclick="DeleteConnectionConfig" type="button" class="btn btn-@(deleteInit ? "" : "outline-")danger">@(deleteInit ? "Подтвердить удаление" : "Удаление")</button>
                    @if (deleteInit)
                    {
                        <button @onclick="() => deleteInit = false" class="btn btn-primary" type="button">Отмена удаления</button>
                    }
                </div>
            </div>
        }
    </div>
</div>