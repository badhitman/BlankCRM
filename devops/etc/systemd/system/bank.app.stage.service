[Unit]
Description=bank.app.stage.service

[Service]
WorkingDirectory=/srv/services.stage/BankService
ExecStart=/usr/bin/dotnet /srv/services.stage/BankService/BankService.dll
Restart=always
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=dotnet-bank-app.stage
User=www-data
Environment=DOTNET_ENVIRONMENT=Staging
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=TransmissionQueueNamePrefix=_stage

[Install]
WantedBy=multi-user.target